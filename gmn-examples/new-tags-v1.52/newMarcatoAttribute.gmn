% New \marcato-tag attribute :
%
% - position defines the position (and the orientation) of the symbol. Values: "below", "above", "notset".
%					If position attribute is not specified, symbol's position is chosen automatically
%
[
    \marcato(a)
    \marcato<position="above", dy=4> (a)
    \marcato<position="notset">(b)
    \marcato<position="below", dy=-4>(b)
]