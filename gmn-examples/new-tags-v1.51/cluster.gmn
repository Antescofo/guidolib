% cluster.gmn

% \cluster-tag is useful to create clusters in score.

% Usage : \cluster({chord}{chord}...)
%
% Parameters :
%       - Color (modify only color of head's cluster
%                --> use \noteFormat-tag to modify its entire color)
%       - Size (modify only horizontal size)
%       - dx/dy (modify position of entire cluster)
%       - adx/ady (modify only position of head's cluster)

{
  [
    \meter<"4/4">
    \cluster({c,e}{a}{f,c2})
    \cluster<color="blue">({d1/2, g}{f, g2})
  ],
  [
    \noteFormat<color="red">
    \cluster<adx=1, ady=3>({f,a})
    \cluster<color="purple">({d1, g}) a
    \cluster<dx=-7>({c,a})
  ]
}